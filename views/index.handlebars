
<div class = "text-center">
	<h1>Eat-Da-Burger</h1>
	<img src="../assets/img/burger.png" alt="">
</div>

<div class="container">

	<div class="text-center">
	    <form method="POST" action="/" class="">
	        <input type="text" name="name" class="">
	        <button type="button" class="btn btn-primary">Submit</button>
	        <br>
	        Enter a burger you want to eat. Click the "Submit" button.
	    </form>
	</div>


    <div class="">
        <ul>
            {{#each burgers}} {{#unless this.devoured}}
            <div class="burgerCell">
                <li>
                    <div class="well well-sm">
                        {{this.burger_name}}
                    </div>
                </li>
                <div class="">
                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="true">
                        <button type="submit" class="eatBtn">Devour It!</button>
                    </form>
                </div>
            </div>
            {{/unless}} {{/each}}
        </ul>
    </div>


    <div class="">
        <ul>
            {{#each burgers}} {{#if this.devoured}}
            <div class="burgerCell">
                <li>
                    {{this.burger_name}}
                </li>
            </div>
            {{/if}} {{/each}}
        </ul>
    </div>
</div>