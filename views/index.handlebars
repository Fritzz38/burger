
<h1>Eat-Da-Burger</h1>

<img src="../assets/img/burger.png" alt="logo">

<div class="container">

    <div class="inputBurger">
        <form method="POST" action="/" class="">
            <input type="text" name="name" class="burgText">
            <input type="submit" value="Submit" class="submit">
            <br>
            Enter a burger you want to eat. Click the "Submit" button.
        </form>
    </div>


    <div class="">
        <ul>
            {{#each burgers}} {{#unless this.devoured}}
            <div class="burgerCell">
                <li>
                    <div class="">
                        {{this.burger_name}}
                    </div>
                </li>
                <div class="">
                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="true">
                        <button type="submit" class="eatBtn">Devour It!</button>
                    </form>
                </div>
            </div>
            {{/unless}} {{/each}}
        </ul>
    </div>


    <div class="">
        <ul>
            {{#each burgers}} {{#if this.devoured}}
            <div class="burgerCell">
                <li>
                    {{this.burger_name}}
                </li>
                <div class="">
                    <form action="/{{this.id}}?_method=DELETE" method="POST">
                        <button type="submit" class="eatBtn">Delete</button>
                    </form>
                </div>
            </div>
            {{/if}} {{/each}}
        </ul>
    </div>
</div>