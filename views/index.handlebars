//Create a button in index.handlebars that will submit the user input into the database.

<h1>Eat-Da-Burger</h1>

<ul>
  {{#each plans}}
  <li>
    <p>
      {{this.id}}. {{this.plan}}

      <form action="/{{this.id}}?_method=DELETE" method="POST">
        <button type="submit">Delete Plan!</button>
      </form>
    </p>
  </li>
  {{/each}}
</ul>

<h2>Create a Plan</h2>
<form method="POST" action="/" class="button-size">
  <textarea type="text" name="plan"></textarea>
</form>



<div class="container">
    <div class="heading">Burgers
    </div>

    <div class="inputBurger">
        <form method="POST" action="/" class="bur">
            <input type="text" name="name" class="burgText">
            <input type="submit" value="Submit" class="submit">
            <button type="submit">Submit</button>
            <br>
            Enter a burger you want to eat. Click the "Submit" button.
        </form>
    </div>


    <div class="burgerContainer burgerWell">
        <h2>Burgers yet to be Devoured</h2>
        <ul>
            {{#each burgers}} {{#unless this.devoured}}
            <div class="burgerCell">
                <li>
                    <div class="burgerName">
                        {{this.burger_name}}
                    </div>
                </li>
                <div class="eat">
                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="true">
                        <button type="submit" class="eatBtn">Devour!</button>
                    </form>
                </div>
            </div>
            {{/unless}} {{/each}}
        </ul>
    </div>


    <div class="eatenContainer burgerWell">
        <h2>Burgers Devoured</h2>
        <ul>
            {{#each burgers}} {{#if this.devoured}}
            <div class="burgerCell">
                <li>
                    {{this.burger_name}}
                </li>
                <div class="del">
                    <form action="/{{this.id}}?_method=DELETE" method="POST">
                        <button type="submit" class="eatBtn">Delete</button>
                    </form>
                </div>
            </div>
            {{/if}} {{/each}}
        </ul>
    </div>
</div>